<% if(users.length > 0){ 
	users.forEach(function(user){ %> 
		<div data-uid="<%= user._id %>">
			<li data-uid="<%= user._id %>">
				<div class="contactPanel">
					<div class="user-avatar">
						<img src="./libraries/images/users/<%= user.avatar %>" alt="Thumb User">
					</div>
					<div class="user-name">
						<p>
							<%= user.username %>
						</p>
					</div>
					<br>
					<div class="user-address">
						<span>&nbsp <%= user.address %></span>
					</div>
					<div class="add-user-to-group" data-uid="<%= user._id %>">
						Thêm vào nhóm
					</div>
				</div>
			</li>
		</div>
<% }) } %>

<% if(users.length === 0){ %>
	<li class="contactPanel text-center">
		<p>
			Không tìm thấy kết quả nào
		</p>
	</li>
<% } %>
